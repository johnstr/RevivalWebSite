@using RevivalWebSite.Models
@model List<Media> 

@{
    Layout = null;
}

@if (Model.Count == 0)
{
    <div class="jumbotron">
        <span class="h5">No media found</span>
    </div>
}
else
{
    <div class="row merge-close">
        <div class="col-lg-3">
            @for (var i = 0; i < Model.Count; i += 4)
            {
                Html.RenderPartial("../Partials/MediaPartial", Model[i]);
            }
        </div>
        <div class="col-lg-3">
            @for (var i = 1; i < Model.Count; i += 4)
            {
                Html.RenderPartial("../Partials/MediaPartial", Model[i]);
            }
        </div>
        <div class="col-lg-3">
            @for (var i = 2; i < Model.Count; i += 4)
            {
                Html.RenderPartial("../Partials/MediaPartial", Model[i]);
            }
        </div>
        <div class="col-lg-3">
            @for (var i = 3; i < Model.Count; i += 4)
            {
                Html.RenderPartial("../Partials/MediaPartial", Model[i]);
            }
        </div>
    </div>

}

