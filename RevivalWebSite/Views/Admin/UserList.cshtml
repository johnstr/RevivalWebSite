@using RevivalWebSite.ViewModels
@model List<UserViewModel>

@{
    Layout = null;
}

<div class="table-responsive">
    @if (Model.Count == 0)
    {
        <div class="jumbotron">
            <h4>No registered users</h4>
        </div>
    }
    else
    {
        <table class="table  table-hover">
            <thead>
                <tr>
                    <th>Full Name</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Role</th>
                    @if (User.IsInRole("admin"))
                    {
                    <th></th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.FullName</td>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <td>@user.RoleName</td>
                        @if(User.IsInRole("admin")){ 
                            <td class="text-right">
                                <div class="btn btn-default" onclick="editUser('@user.Id')"><i class="fa fa-edit text-warning"></i></div>
                                <div class="btn btn-default" data-toggle="modal" data-target="#deleteUser"  onclick="deleteUser('@user.Id')"><i class="fa fa-trash text-danger"></i></div>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    }
</div>