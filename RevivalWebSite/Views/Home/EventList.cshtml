@using RevivalWebSite.Models
@model List<Event>

@{
    Layout = null;
    ViewBag.Count = 5;
}

@if (Model.Count == 0)
{
    <div class="jumbotron">
        <span class="h5">No events found</span>
    </div>
}
else
{
    for (int i = 0; i < Model.Count; i++)
    {
        if (i > 4)
        {
            ViewBag.Hide = "d-none";
        }
        Html.RenderPartial("../Partials/EventPartial", Model[i]);
    }


    if (ViewBag.Hide == "d-none")
    {
        <div class="row d-flex align-items-center justify-content-center">
            <button id="seeMore" class="btn btn-outline-secondary">See More</button>
        </div>
    }

}