@using RevivalWebSite.Models
@model List<Media>

@{
    Layout = null;
}

@if (Model.Count == 0)
{

    <div class="jumbotron">
        <span class="h5">No media found</span>
    </div>
}
else
{
    if(Request.Browser.IsMobileDevice)
    {
     <div class="row">
        <div class="col-lg-12">
            @for (var i = 0; i < Model.Count; i++)
            {
                if (i > 8)
                {
                    ViewBag.Hide = "d-none";
                }
                Html.RenderPartial("../Partials/MediaPartial", Model[i]);
            }
        </div>
     </div>
    }
    else
    {

        <div class="row">
            <div class="col-lg-4">
                @for (var i = 0; i < Model.Count; i += 3)
                {
                    if (i > 8)
                    {
                        ViewBag.Hide = "d-none";
                    }
                    Html.RenderPartial("../Partials/MediaPartial", Model[i]);
                }
            </div>
            <div class="col-lg-4">
                @for (var i = 1; i < Model.Count; i += 3)
                {
                    if (i > 8)
                    {
                        ViewBag.Hide = "d-none";
                    }
                    else
                    {
                        ViewBag.Hide = "";
                    }
                    Html.RenderPartial("../Partials/MediaPartial", Model[i]);
                }
            </div>
            <div class="col-lg-4">
                @for (var i = 2; i < Model.Count; i += 3)
                {
                    if (i > 8)
                    {
                        ViewBag.Hide = "d-none";
                    }
                    else
                    {
                        ViewBag.Hide = "";
                    }
                    Html.RenderPartial("../Partials/MediaPartial", Model[i]);
                }
            </div>
        </div>
    }


    if (ViewBag.Hide == "d-none")
    {
    <div class="row d-flex align-items-center justify-content-center">
        <button id="seeMore" class="btn btn-outline-secondary h8">See More</button>
    </div>
    }

}

