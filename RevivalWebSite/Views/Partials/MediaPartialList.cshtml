@using RevivalWebSite.Models 
@model List<Media> 


@if (Model.Count == 0)
{
    <div class="jumbotron">
        <span class="h5">No media found</span>
    </div>
}
else
{
      <div class="row">
        <div class="col-lg-4">
            @for (var i = 0; i < Model.Count; i += 3)
            {
                    Html.RenderPartial("../Partials/MediaPartial", Model[i]);
            }
        </div>
        <div class="col-lg-4">
            @for (var i = 1; i < Model.Count; i += 3)
            {
                    Html.RenderPartial("../Partials/MediaPartial", Model[i]);
            }
        </div>
        <div class="col-lg-4">
            @for (var i = 2; i < Model.Count; i += 3)
            {
                Html.RenderPartial("../Partials/MediaPartial", Model[i]); 
            }
        </div>
    </div>

}
